<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties"/>

    <bean id="musicBean1"
          class="ru.andrewsalygin.springcourse.ClassicalMusic"
          init-method="methodToInit"
          destroy-method="methodToDestroy">
        <constructor-arg value="Schenkerian Analysis"/>
    </bean>

    <bean id="musicBean2"
          class="ru.andrewsalygin.springcourse.RockMusic">
        <constructor-arg value="Shinedown - Diamond Eyes"/>
    </bean>

    <bean id="musicBean3"
          class="ru.andrewsalygin.springcourse.JazzMusic">
        <constructor-arg value="Smooth Music for Moods"/>
    </bean>

    <bean id="listOfMusic"
          class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <ref bean="musicBean1"/>
                <ref bean="musicBean2"/>
                <ref bean="musicBean3"/>
            </list>
        </constructor-arg>
    </bean>

    <!-- Dependency Injection -->
    <bean id="musicPlayer"
          class="ru.andrewsalygin.springcourse.MusicPlayer"
          scope="prototype">
        <property name="music" ref="listOfMusic"/>
        <property name="name" value="${musicPlayer.name}"/>
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>
</beans>